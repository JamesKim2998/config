#!/bin/bash
set -e

if [ "$#" -ge 1 ]; then
    BRANCH=$1
else
    echo "use cur branch"
    BRANCH=`git rev-parse --abbrev-ref HEAD`
fi

echo $BRANCH

git checkout master
git pull --rebase origin master

git checkout $BRANCH
git rebase master

git checkout master
git merge $BRANCH
git checkout $BRANCH
git rebase master
git checkout master
