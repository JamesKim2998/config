    email = eodnjs2998@gmail.com
[credential]
    helper = osxkeychain
[core]
    editor = nvim
    quotepath = off
    excludesfile = ~/.gitignore_global
    autocrlf = input
    pager = delta # https://github.com/dandavison/delta
[interactive]
    diffFilter = delta --color-only # https://github.com/dandavison/delta
[pull]
    rebase = true
[merge]
    ff = false
    conflictstyle = zdiff3 # https://github.com/dandavison/delta
[rebase]
    autoStash = true
[push]
    recurseSubmodules = on-demand
[lfs]
    concurrenttransfers = 64
[filter "lfs"]
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
[delta]
    tabs = 2
    navigate = true  # use n and N to move between diff sections
    dark = true      # or light = true, or omit for auto-detection
