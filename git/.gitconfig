[core]
	editor = nvim
	quotepath = off
	excludesfile = ~/.gitignore_global
	autocrlf = input
	pager = delta
	fsmonitor = true       # background daemon watches filesystem for changes
	untrackedCache = true  # cache untracked files to speed up git status

[fetch]
	prune = true
[pull]
	rebase = false
	ff = true
[push]
  autoSetupRemote = true
	recurseSubmodules = on-demand
[merge]
	conflictstyle = zdiff3
[rebase]
	autoStash = true

[diff]
  algorithm = histogram
	# show full submodule diffs instead of just commit pointer (lazygit ignores this)
	submodule = diff
[delta]
	tabs = 2
	navigate = true
	dark = true
	syntax-theme = kanagawa
[interactive]
	diffFilter = delta --color-only

[lfs]
	concurrenttransfers = 64
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[submodule]
	fetchJobs = 64  # parallel submodule fetch/clone/update

[credential]
	helper = osxkeychain
[credential "https://github.com"]
	helper =  # clear default helper chain
	helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper =  # clear default helper chain
	helper = !/opt/homebrew/bin/gh auth git-credential

[include]
	path = ~/.gitconfig.local
