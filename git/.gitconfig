[core]
	editor = nvim
	quotepath = off
	excludesfile = ~/.gitignore_global
	autocrlf = input
	pager = delta

[pull]
	rebase = false
	ff = true
[push]
	# "check" catches amended submodule commits; "on-demand" misses them
	recurseSubmodules = check
[merge]
	conflictstyle = zdiff3
[rebase]
	autoStash = true

[diff]
	# show full submodule diffs instead of just commit pointer (lazygit ignores this)
	submodule = diff
[delta]
	tabs = 2
	navigate = true
	dark = true
	syntax-theme = kanagawa
[interactive]
	diffFilter = delta --color-only

[lfs]
	concurrenttransfers = 64
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[credential]
	helper = osxkeychain
[credential "https://github.com"]
	helper =  # clear default helper chain
	helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper =  # clear default helper chain
	helper = !/opt/homebrew/bin/gh auth git-credential

[include]
	path = ~/.gitconfig.local
